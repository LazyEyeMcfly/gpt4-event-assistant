{
  // The name of your project/package
  "name": "south-main-mercado-assistant",

  // Version number of your project (semantic versioning: major.minor.patch)
  "version": "1.0.0",

  // Specifies that this project uses ECMAScript modules (ESM) instead of CommonJS
  "type": "module",

  // Entry point file for the project (main server file)
  "main": "server.js",

  // Scripts you can run via `npm run <script-name>`
  "scripts": {
    // Starts the server using Node.js in ESM mode, ensuring it treats the file as a module
    "start": "node --input-type=module server.js"
  },

  // Project dependencies (installed via `npm install`)
  "dependencies": {
    // Parses incoming request bodies in middleware (e.g., JSON payloads)
    "body-parser": "^1.20.2",

    // Enables Cross-Origin Resource Sharing for the Express server
    "cors": "^2.8.5",

    // Minimal and flexible Node.js web application framework used to build the API server
    "express": "^4.18.2",

    // Official OpenAI SDK for interacting with GPT-4.1 and other models via API
    "openai": "^4.33.1"
  }
}
